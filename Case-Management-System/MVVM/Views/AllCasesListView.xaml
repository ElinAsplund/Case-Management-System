<UserControl x:Class="Case_Management_System.MVVM.Views.AllCasesListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Case_Management_System.MVVM.Views"
             xmlns:models="clr-namespace:Case_Management_System.MVVM.Models"
             xmlns:viewmodels="clr-namespace:Case_Management_System.MVVM.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:AllCasesListViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid
        Margin="30 0 30 20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Text="Alla ärenden:"
            Grid.Row="0"
            FontSize="16" 
            Margin="0 20 0 0" 
            FontWeight="DemiBold" 
            Foreground="#683b36"/>

        <TextBlock 
            Text="För att se detaljerad information, markera ärendet och tryck på knappen specific!"
            Grid.Row="1"
            FontSize="16" 
            Margin="0 0 0 10" 
            FontWeight="DemiBold" 
            Foreground="#683b36"/>

        <Grid 
            Grid.Row="2" 
            Name="Main">

            <TextBlock
                Grid.Row="0">
                <Run Text="Förnamn: "/>
                <Run Text="{Binding TaskList[0].CustomerFirstName}"/>
            </TextBlock>

            <ListView 
                ItemsSource="{Binding TaskList}" 
                BorderThickness="0"
                HorizontalContentAlignment="Stretch" 
                Margin="0 0 0 0">

                <ListView.ItemTemplate>
                    <DataTemplate DataType="models:Case">
                        <StackPanel Margin="0 5 0 5" 
                                    Background="MistyRose">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel 
                                    Grid.Column="0" 
                                    Margin="5 5 5 5">
                                    <TextBlock 
                                        FontWeight="Bold" 
                                        Text="{Binding CustomerFirstName}" />
                                    <TextBlock
                                        Text="{Binding CustomerLastName}" />
                                </StackPanel>

                                <StackPanel Grid.Column="1" 
                                        Orientation="Horizontal" >
                                    <TextBlock
                                        FontWeight="Bold" 
                                        Text="Status: " />
                                    <TextBlock
                                        Text="{Binding Status}" />
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <EventSetter Event="PreviewMouseDown" Handler="ClickedListViewItem"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </Grid>
    </Grid>
</UserControl>
